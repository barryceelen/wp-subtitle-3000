<?xml version="1.0"?>
<ruleset name="Manz">
	<description>A custom set of PHP_CodeSniffer rules for the Subtitle 3000 plugin</description>
	<rule ref="WordPress-Extra">
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing"/>
	</rule>
	<rule ref="WordPress-Docs"/>
	<rule ref="Generic.Commenting.Todo"/>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="subtitle-3000"/>
		</properties>
	</rule>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="subtitle_3000"/>
		</properties>
	</rule>
	<rule ref="WordPress.WP.DeprecatedClasses">
		<properties>
			<property name="minimum_supported_version" value="3.8"/>
		</properties>
	</rule>
	<rule ref="WordPress.WP.DeprecatedFunctions">
		<properties>
			<property name="minimum_supported_version" value="3.8"/>
		</properties>
	</rule>
	<rule ref="WordPress.WP.DeprecatedParameters">
		<properties>
			<property name="minimum_supported_version" value="3.8"/>
		</properties>
	</rule>
	<rule ref="WordPress.VIP">
		<exclude name="WordPress.VIP.RestrictedFunctions"/>
	 </rule>
</ruleset>